{
  "functions": [
    {
      "source": "apps/api/functions",
      "codebase": "api",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules",
        ".git",
        ".turbo"
      ],
      "predeploy": [
        "pnpm --filter @apps/api-functions build"
      ]
    }
  ],
  "hosting": [
    {
      "target": "static",
      "public": "apps/static/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "headers": [
        {
          "source": "**/*.@(css|js)",
          "headers": [
            { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
          ]
        }
      ],
      "rewrites": [
        { "source": "**", "destination": "/index.html" }
      ],
      "predeploy": [
        "pnpm --filter @apps/static build"
      ]
    },
    {
      "target": "solid",
      "public": "apps/solid/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "headers": [
        {
          "source": "**/*.@(css|js)",
          "headers": [
            { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
          ]
        }
      ],
      "rewrites": [
        { "source": "**", "destination": "/index.html" }
      ],
      "predeploy": [
        "pnpm --filter @apps/solid build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": { "port": 5001 },
    "hosting": { "port": 5000 },
    "firestore": { "port": 8080 },
    "ui": { "enabled": true }
  }
}


